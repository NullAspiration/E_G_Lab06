@model IEnumerable<E_G_Lab06.Models.ViewModels.UserListVM>

@{
    ViewData["Title"] = "Index";
}

<h1>User List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfRoles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleNames)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfRoles)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleNames)
            </td>
            <td>
                    <a asp-action="assignrole" asp-controller="User"
                   asp-route-id="@item.UserName" >Assign Role</a>
            </td>
        </tr>
}
    </tbody>
</table>
